<%= form_for @document, url: yield(:form_url) do |f| %>
  <%= render 'layouts/error_messages', object: @document %>

  <%= f.label :name %> <br />
  <%= f.text_field :name %> <br />
  <%= f.label :description %> <br />
  <%= f.text_field :description, class: 'description-form-field' %> <br />
  <br />
  <%= f.text_area :content, class: 'content-form-field' %> <br />
  <%= f.submit yield(:submit_text) %>
<% end %>

