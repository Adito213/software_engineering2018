<h1> New Document </h1>
<%= form_for @document do |f| %>
  <h2><%= f.label :name %></h2>
  <%= f.text_field :name %><br/>
  <h2><%= f.label :desc %></h2>
  <%= f.text_field :desc %><br/>
  <h2><%= f.label :content %></h2>
  <%= f.text_area :content %><br/>
  <%= f.label :subscription %>
  <%= f.check_box :subscription %><br/>

  <h3><%= f.submit %></h3>
<% end %>

<%= link_to 'Go back', '/documents' %>

