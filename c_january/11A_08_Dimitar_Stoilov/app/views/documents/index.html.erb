<table>
  <tr>
    <th>Title</th>
    <th></th>
  </tr>
 
  <% @documents.each do |document| %>
    <tr>
      <td><%= document.title %></td>
      <td><%= link_to 'Show', document_path(document) %></td>
      <% if user_signed_in? %>
        <td><%= link_to 'Destroy', document_path(document),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
  <% end %>
</table>
