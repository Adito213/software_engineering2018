<p id="notice"><%= notice %></p>

<h1>Documents</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.name %></td>
        <td><%= document.description %></td>
        <td><%= document.content %></td>
        <td><%= link_to 'Show', document %></td>
        <td><%= link_to 'Edit', edit_document_path(document) %></td>
        <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Document', new_document_path %>
<br>

<% if model_signed_in? %>
  
  <li>
  <%= link_to('Logout', destroy_model_session_path, method: :delete) %>
  
  </li>
  <br>
  <li>
  
  <%= link_to('Edit registration', edit_model_registration_path) %>

  </li>
<% else %>
  <li>
  <%= link_to('Login', new_model_session_path)  %>
  <br>
  
  </li>

  

  <li>  
  <%= link_to('Register', new_model_registration_path)  %>
  </li>
<% end %>
