<div class="container">
	<%= form_for Document.new do |f| %>
		<div class="field">
  			<%= f.label :name %>
			<%= f.text_field :name %>
		</div>
		<br>
		<div class="field">
  			<%= f.label :description %>
			<%= f.text_area :description %>
		</div>
		<br>
		<div class="field">
 			<%= f.label :content %>
			<%= f.text_area :content %>
		</div>
		<br>
		<%= f.submit "Create", :class => 'btn btn-success' %>
	<% end %>
</div>