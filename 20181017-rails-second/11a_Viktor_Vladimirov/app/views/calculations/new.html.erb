<h1>Calculate!</h1>

<%= form_tag("/calculations/create/", method: "post") do %>
    <%= label_tag(:q, "a:") %>
    <%= text_field_tag(:a) %>
    <br>
    <%= label_tag(:q, "b:") %>
    <%= text_field_tag(:b) %>
    <br>
    <%= label_tag(:q, "c:") %>
    <%= text_field_tag(:c) %>
    <br>
    <%= submit_tag("Calculate") %>
<% end %>