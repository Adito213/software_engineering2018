<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @person.name %>
</p>

Subscribed events: <br/><br/>
<% @person_events.each do |event| %>
    name: <%= event.name%><br/>
    location: <%= event.location%><br/>
    date: <%= event.date%><br/>
    description: <%= event.description%><br/>
    <%= link_to "Unsubscribe", "#{@person.id}/cancel?event_id=#{event.id}" %> <br/>
<% end %>

Other events: <br/><br/>
<% @other_events.each do |event| %>
    name: <%= event.name%><br/>
    location: <%= event.location%><br/>
    date: <%= event.date%><br/>
    description: <%= event.description%><br/>
    <%= link_to "Attend", "#{@person.id}/attend?event_id=#{event.id}" %> <br/> 
<% end %>



<%= link_to 'Edit', edit_person_path(@person) %> |
